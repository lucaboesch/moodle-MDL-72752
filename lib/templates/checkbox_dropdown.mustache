{{!
    @template core/checkbox_dropdown

    Example context (json):
    {
        "columns": [
            {
                "name": "Column A",
                "id": "column_a id",
                "checked": true
            }
        ]
    }
}}
<div class="btn-group" id="{{id}}">

    <a href="#" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="{{title}}">
        {{#text}}
            {{text}}
        {{/text}}

        {{#pixicon}}
            {{#pix}}{{pixicon}}, {{pixcomponent}}{{/pix}}
        {{/pixicon}}

    </a>

    <div class="dropdown-menu dropdown-menu-right" role="menu">
        {{#columns}}
            <div class="dropdown-item">
                <input type="checkbox" class="checkbox" value="{{id}}" id="cb_{{id}}" {{#checked}}checked{{/checked}}>
                <label for="{{id}}">{{{name}}}</label>
            </div>
        {{/columns}}
    </div>
</div>