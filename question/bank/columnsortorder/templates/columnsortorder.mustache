{{!
    @template qbank_columnsortorder/columnsortorder.mustache

    Admin question bank setting template.

    Context variables required for this template:
    * name - plugin name
    * hiddenname - class/columname

    Example context (json):
    {
        "name": "Creatorname (creator_name_column)",
        "hiddenname": "creator_name_column"
    }
}}

<div>
    {{#str}}qbanksortdescription, qbank_columnsortorder{{/str}}
</div>
<br>
<div id="show-hide-dropdown">
</div>
<table class="generaltable table-responsive" id="qbank_columnsortorder-{{uniqid}}"
       data-pinnedcolumns="{{pinnedcolumns}}" data-hiddencolumns="{{hiddencolumns}}" data-colsize="{{colsize}}">
    <thead>
        <tr class="column item list-group-item list-group-item-action">
            {{#names}}
                <th class="border-left border-right header" data-pluginname="{{class}}" data-name="{{name}}">
                    {{>qbank_columnsortorder/column_cell}}
                </th>
            {{/names}}
        </tr>
    </thead>
</table>

<br>
<div>
    {{#columnsdisabled}}
        {{#str}}qbankcolumnsdisabled, qbank_columnsortorder{{/str}}
        <br>
    {{/columnsdisabled}}
    {{#disabled}}
        <div class="list-group-item disabled">
            {{disabledname}}
        </div>
    {{/disabled}}
</div>
{{#js}}
    require(['core/table_column_action', 'core/ajax', 'core/notification'], function(ColumnAction, Ajax, Notification) {
        ColumnAction.setUpTable("qbank_columnsortorder-{{uniqid}}", "pluginname", "name");
        ColumnAction.setUpCurrentPinnedColumns();
        ColumnAction.setUpCurrentColumnSizes();

        // Setup show/hidden dropdown.
        ColumnAction.setUpHideShowDropdown("#show-hide-dropdown", (columns) => {
            const call = {
                methodname: 'qbank_columnsortorder_set_hidden_columns',
                args: {columns},
            };
            Ajax.call([call])[0]
                .catch(Notification.exception);
        });

        // Set up move action.
        ColumnAction.setUpMoveHandle(".move-handle", (columns) => {
            const call = {
                methodname: 'qbank_columnsortorder_set_columnbank_order',
                args: {columns},
            };
            Ajax.call([call])[0]
                .catch(Notification.exception);
        });

        // Set up pin action.
        ColumnAction.setUpPinHandle(".pin-handle", (columns) => {
            const call = {
                methodname: 'qbank_columnsortorder_set_pinned_columns',
                args: {columns},
            };
            Ajax.call([call])[0]
                .catch(Notification.exception);
        });

        // Set up resize action.
        ColumnAction.setUpResizeHandle(".resize-handle", (sizes) => {
            const call = {
                methodname: 'qbank_columnsortorder_set_column_size',
                args: {sizes},
            };
            Ajax.call([call])[0]
                .catch(Notification.exception);
        });
    });
{{/js}}
<br>
<div>
    {{{urltomanageqbanks}}}
</div>
